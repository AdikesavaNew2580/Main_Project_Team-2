@{ ViewBag.Title = "Index"; }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>Employee Travel Booking System</title>*@
    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f4f4f9;
        }
        /* Header Styles */
        header {
            background-color: #007bff;
            color: white;
            padding: 20px 0;
            text-align: center;
        }

            header h1 {
                margin: 0;
                font-size: 2rem;
            }
        /* Body Section Styles */
        .welcome-section {
            text-align: center;
            margin: 40px auto;
            max-width: 800px;
        }

        .welcome-message {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .description {
            font-size: 1rem;
            color: #555;
            margin-bottom: 30px;
            line-height: 1.6;
        }
        /* Features Section Styles */
        .features {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            justify-content: center;
            max-width: 960px;
            margin: 0 auto;
        }

        .feature-card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            transition: transform 0.3s, box-shadow 0.3s;
            text-decoration: none;
            color: #333;
            overflow: hidden;
        }

            .feature-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            }

        .feature-icon {
            font-size: 40px;
            margin-bottom: 15px;
        }

        .feature-title {
            font-size: 1.25rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .feature-description {
            font-size: 0.875rem;
            color: #777;
        }
        /* Footer Section Styles */
        footer {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .footer-links {
            margin-top: 20px;
        }

            .footer-links a {
                color: #fff;
                text-decoration: none;
                margin: 0 10px;
                font-size: 0.875rem;
            }

                .footer-links a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <h1>Employee Travel Booking System</h1>
    </header>
    <section class="welcome-section">
        <div class="welcome-message">Welcome to the EmpX Travel Booking System</div>
        <div class="description">Employee Travel Booking Application allows employees to raise requests for booking business travel tickets. This application automates the process of travel requests, making it convenient for employees, managers, and travel agents.</div>
        <div class="features">
            <!-- Admin Feature -->
            <a href="@Url.Action("Login", "AdminLogin")" class="feature-card">
                <div class="feature-icon">👔</div>
                <div class="feature-title">Admin</div>
                <div class="feature-description">Manage employees, managers, and travel agents.</div>
            </a>
            <!-- Employee Feature -->
            <a href="@Url.Action("Login", "EmployeeLogin")" class="feature-card">
                <div class="feature-icon">🧑‍💼</div>
                <div class="feature-title">Employee</div>
                <div class="feature-description">Submit travel requests and check status.</div>
            </a>
            <!-- Manager Feature -->
            <a href="@Url.Action("ManagerLogin", "ManagerLogin")" class="feature-card">
                <div class="feature-icon">🧑‍💼‍🛠️</div>
                <div class="feature-title">Manager</div>
                <div class="feature-description">Approve or reject travel requests.</div>
            </a>
            <!-- Travel Agent Feature -->
            <a href="@Url.Action("Login", "AgentLogin")" class="feature-card">
                <div class="feature-icon">🌍</div>
                <div class="feature-title">Travel Agent</div>
                <div class="feature-description">Confirm bookings based on availability.</div>
            </a>
            <!-- Incident Management Feature -->
            <a href="@Url.Action("Index", "Home")" class="feature-card">
                <div class="feature-icon">🚨</div>
                <div class="feature-title">Incident Management</div>
                <div class="feature-description">Manage and resolve incidents.</div>
            </a>
            <!-- Service Management Feature -->
            <a href="@Url.Action("Index", "Home")" class="feature-card">
                <div class="feature-icon">🛠️</div>
                <div class="feature-title">Service Management</div>
                <div class="feature-description">Manage and monitor services.</div>
            </a>
            <!-- Project SkillPack Feature -->
            <a href="@Url.Action("Index", "Home")" class="feature-card">
                <div class="feature-icon">📚</div>
                <div class="feature-title">Project SkillPack</div>
                <div class="feature-description">Manage and assign project skills.</div>
            </a>
            <!-- Visa Management Feature -->
            <a href="@Url.Action("Index", "Home")" class="feature-card">
                <div class="feature-icon">✈️</div>
                <div class="feature-title">Visa Management</div>
                <div class="feature-description">Manage visa requests and approvals.</div>
            </a>
            <!-- Project Management Feature -->
            <a href="@Url.Action("Index", "Home")" class="feature-card">
                <div class="feature-icon">📁</div>
                <div class="feature-title">Project Management</div>
                <div class="feature-description">Oversee and manage project activities.</div>
            </a>
        </div>
    </section>

</body>
</html>