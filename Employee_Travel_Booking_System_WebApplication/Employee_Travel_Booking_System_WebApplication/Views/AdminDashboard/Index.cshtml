﻿
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <!-- Include Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            font-family: Nunito, sans-serif;
            justify-content: center;
            align-items: center;
            background-color: #f5f5f5; /* Light gray background */
            overflow-x: hidden; /* Hide horizontal scrollbar */
        }

        /* Adjusted Card Styles */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px; /* Spacing between cards */
            margin-top: 30px;
            padding-bottom: 50px; /* Add space at the bottom for footer */
        }

        .card {
            width: 300px; /* Adjust card width */
            max-width: 100%;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
            overflow: hidden; /* Hide overflowing content */
            position: relative;
            transition: transform 0.3s ease; /* Add transition for hover effect */
        }

            .card:hover {
                transform: translateY(-5px); /* Move card up on hover */
            }

        .card-header {
            background-color: black; /* Card header color */
            color: white;
            font-weight: bold;
            border-radius: 10px 10px 0 0;
            padding: 15px;
            text-align: center;
        }

        .card-content {
            padding: 20px;
            background-color: #fff; /* White background */
            position: relative; /* Relative positioning for icon positioning */
            text-align: center; /* Center align text and icons */
        }

            .card-content i {
                font-size: 30px; /* Icon size */
                color: #28a745; /* Green color for icons */
                margin-bottom: 10px; /* Space between icon and paragraph */
            }

            .card-content p {
                margin: 0; /* Remove default margin */
                font-size: 16px; /* Adjust font size */
            }

        .btn {
            border-radius: 5px;
            padding: 10px 20px;
            background-color: #28a745; /* Green button */
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            display: block;
            margin: 20px auto; /* Center button */
        }

            .btn:hover {
                background-color: #218838; /* Darker green on hover */
            }

        /* Footer Styles */
        footer {
            background-color: #343a40;
            color: #fff;
            text-align: center;
            padding: 20px 0;
        }

        /* Login Section Styles */
        .login-section {
            position: fixed;
            top: 10px;
            right: 10px;
            background-color: grey;
        }
    </style>
</head>
<body>

    <div class="text-center mt-5">
        <h2>Welcome to Admin Dashboard</h2>
        <p>You can manage employees, managers, travel agents, and handle travel requests from this dashboard.</p>
    </div>

    <div class="container text-center card-container">

        <!-- Existing Cards -->
        <div class="card">
            <div class="card-header">
                Employee Management
            </div>
            <div class="card-content">
                <i class="fas fa-users"></i> <!-- Icon for Employee Management -->
                <p>Manage employees, Assign Mngr</p>
                <a href="@Url.Action("Index", "Employees")" class="btn">Manage Employees</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Travel Agents Management
            </div>
            <div class="card-content">
                <i class="fas fa-briefcase"></i> <!-- Icon for Travel Agents Management -->
                <p>Add and Edit Travel Agents</p>
                <a href="@Url.Action("Index", "TravelAgents")" class="btn">Manage Travel Agents</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Manager Management
            </div>
            <div class="card-content">
                <i class="fas fa-user-cog"></i> <!-- Updated icon for Manager Management -->
                <p>Add, Edit and Soft delete Manager</p>
                <a href="@Url.Action("Index", "Managers")" class="btn">Manage Manager</a>
            </div>
        </div>

        <!-- New Cards -->
        <div class="card">
            <div class="card-header">
                User Roles Management
            </div>
            <div class="card-content">
                <i class="fas fa-user-shield"></i> <!-- Icon for User Roles Management -->
                <p>Manage user roles and permissions</p>
                <a href="@Url.Action("Index", "AdminDashboard")" class="btn">Manage Roles</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Reports and Analytics
            </div>
            <div class="card-content">
                <i class="fas fa-chart-line"></i> <!-- Icon for Reports and Analytics -->
                <p>View and analyze reports</p>
                <a href="@Url.Action("Index", "AdminDashboard")" class="btn">View Reports</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                System Settings
            </div>
            <div class="card-content">
                <i class="fas fa-cogs"></i> <!-- Icon for System Settings -->
                <p>Configure system settings</p>
                <a href="@Url.Action("Index", "AdminDashboard")" class="btn">Configure Settings</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Notifications
            </div>
            <div class="card-content">
                <i class="fas fa-bell"></i> <!-- Icon for Notifications -->
                <p>View and manage notifications</p>
                <a href="@Url.Action("Index", "AdminDashboard")" class="btn">Manage Notifications</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Audit Logs
            </div>
            <div class="card-content">
                <i class="fas fa-clipboard-list"></i> <!-- Icon for Audit Logs -->
                <p>Track system activities</p>
                <a href="@Url.Action("Index", "AdminDashboard")" class="btn">View Logs</a>
            </div>
        </div>

    </div>

