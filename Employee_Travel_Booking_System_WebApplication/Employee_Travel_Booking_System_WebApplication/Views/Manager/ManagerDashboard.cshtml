@{ Layout = null; }
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: 'Verdana', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            color: #333;
        }

        header {
            background-color: #28a745;
            color: #fff;
            padding: 20px;
            text-align: center;
            border-bottom: 5px solid #218838;
            position: relative;
        }

            header h1 {
                margin: 0;
                font-size: 2rem;
            }

        .logout {
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            background-color: #dc3545;
            border-radius: 5px;
            transition: background-color 0.3s;
            position: absolute;
            right: 20px;
            top: 20px;
        }

            .logout:hover {
                background-color: #c82333;
            }

        .container {
            max-width: 1100px;
            margin: 30px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }

        .dashboard-box {
            text-align: center;
            margin-bottom: 30px;
        }

            .dashboard-box h2 {
                color: #28a745;
                font-size: 1.8rem;
                margin-bottom: 20px;
                padding-bottom: 10px;
                border-bottom: 2px solid #28a745;
            }

        .options {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 15px;
        }

        .option {
            background-color: #17a2b8;
            color: #fff;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s, transform 0.2s;
        }

            .option i {
                font-size: 50px;
                margin-bottom: 10px;
            }

            .option a {
                color: #fff;
                text-decoration: none;
                display: block;
                font-size: 1.1rem;
                margin-top: 10px;
            }

            .option:hover {
                background-color: #117a8b;
                transform: translateY(-2px);
            }

        footer {
            background-color: #28a745;
            color: #fff;
            padding: 15px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>
    <header>
        <h1>Manager Dashboard</h1>
        <a href="@Url.Action("Logout", "ManagerLogin")" class="logout">Logout</a>
    </header>

    <div class="container">
        <div class="dashboard-box">
            <h2>Welcome, Manager</h2>
            <div class="options">
                <div class="option">
                    <i class="fas fa-tasks"></i>
                    <a href="@Url.Action("Requests", "Manager")">View  Travel Requests</a>
                </div>
                <div class="option">
                    <i class="fas fa-history"></i>
                    <a href="@Url.Action("RequestHistory", "Manager")">View Travel Request History</a>
                </div>
                <div class="option">
                    <i class="fas fa-users"></i>
                    <a href="@Url.Action("ViewEmployees", "Manager")">View Employees</a>
                </div>
                <div class="option">
                    <i class="fas fa-money-bill-wave"></i>
                    <a href="@Url.Action("ManagerDashboard", "Manager")">Track Travel Budgets</a>
                </div>
                <div class="option">
                    <i class="fas fa-file-alt"></i>
                    <a href="@Url.Action("ManagerDashboard", "Manager")">Generate Reports</a>
                </div>
                <div class="option">
                    <i class="fas fa-chart-line"></i>
                    <a href="@Url.Action("ManagerDashboard", "Manager")">View Analytics</a>
                </div>
            </div>
        </div>
    </div>

    @*<footer>
        <p>&copy; 2024 Your Company</p>
    </footer>*@
</body>

</html>